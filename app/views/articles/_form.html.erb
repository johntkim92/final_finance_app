<div id="article-form">
  <h1 class="center">Create a New Entry</h1>

  <%= form_for(@article) do |f| %>
    <ul>
    <% @article.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :title, "Title" %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :body, "Description" %><br />
      <%= f.text_area :body %>
    </p>
    <p>
      <%= f.label :cash, "$$ Amount $$" %><br />
      <%= f.number_field :cash %>
    </p>
    <p>
      <%= f.label :start_date, "Date Occurred" %><br />
      <%= f.date_field :start_date %>
    </p>
    <p>
      <%= f.label :tag_list %><br />
      <%= f.text_field :tag_list %>
    </p>
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>
